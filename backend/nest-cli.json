{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "templates/**/*",
      { "include": "**/*.hbs", "watchAssets": true },
      {
        "include": "/storage",
        "outDir": "dist/storage",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
