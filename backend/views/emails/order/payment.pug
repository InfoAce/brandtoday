doctype transitional
head
  meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
  title Payment Confirmation
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap' rel='stylesheet' type='text/css')
div(style='background-color: #fafafa; width:100%; height: 100%; padding-top: 10px; padding-bottom: 10px;')
  table(align='center' border='0' cellpadding='0' cellspacing='0' style='padding: 30px;font-family: Montserrat, sans-serif !important;background-color: #fff;-webkit-box-shadow: 0px 0px 14px -4px rgba(0, 0, 0, 0.2705882353);box-shadow: 0px 0px 14px -4px rgba(0, 0, 0, 0.2705882353);width: 50%;border: 2px solid #ededed;')
    tr(style='font-family: Montserrat, sans-serif !important;')
      td(style='font-family: Montserrat, sans-serif !important;')
        table(align='center' bgcolor='#ffffff' cellpadding='20' cellspacing='0' width='600' style='border-collapse: collapse; background-color: #ffffff;')
          tr(style='font-family: Montserrat, sans-serif !important;')
            td(align='left')
              table(width='100%')
                tr(style='font-family: Montserrat, sans-serif !important;') 
                  td(style='font-family: Montserrat, sans-serif !important;')
                      p(style='font-family: Montserrat, sans-serif !important;')
                        span Hello 
                        span=customer.first_name 
                        span 
                        span=customer.last_name 
                        span , your payment has been received.
                tr(style='font-family: Montserrat, sans-serif !important;')
                  td(style='font-family: Montserrat, sans-serif !important;')
          tr(style='font-family: Montserrat, sans-serif !important;')
            td(align='center' style="color: #7e1414;")
              div(style='display:flex;justify-content:center;')
                img(style='width: 200px;' src=company_logo width='220px' alt=company_name)
              div(style='text-align:center;width:100%;')
                h1 Payment Confirmation            
              div(style='font-family: Montserrat, sans-serif !important;')
                h2(style='font-family: Montserrat, sans-serif !important;')
                  span=currency 
                  span 
                    |
                  span=transaction.amount
                h3 Your payment for order 
                  span=order_number
                  span 
                  | has been received
                p(style='font-family: Montserrat, sans-serif !important;')
                  span
                    strong Payment Method: 
                  span=transaction.payment_method
                p(style='font-family: Montserrat, sans-serif !important;')
                  span
                    strong Confirmation No: 
                  span=transaction.confirmation_code  
                p(style='font-family: Montserrat, sans-serif !important;')=new Date(transaction.created_at).toDateString()  
              div(style='font-family: Montserrat, sans-serif !important;')
                strong(style='font-family: Montserrat, sans-serif !important;')
                  p(style='font-family: Montserrat, sans-serif !important;')
                    | Regards,
                    br
                    span=company_name                                        
