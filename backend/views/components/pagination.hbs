<ul class="pagination">
    <li class="page-item">
        <a class="page-link" href="{{links.previousPage}}" aria-label="Previous">
            <span aria-hidden="true">
                <i class="fa fa-chevron-left" aria-hidden="true"></i></span> 
            <span class="sr-only">Previous</span>
        </a>
    </li>
    {{#each links.pages}}
        {{#if label == currentPage }}
            <li class="page-item active">
                <a class="page-link" href="{{link}}">{{label}}</a>
            </li>
        {{#else}}
            <li class="page-item">
                <a class="page-link" href="{{link}}">{{label}}</a>
            </li>        
        {{/if}}
    {{/each}}
    <li class="page-item">
        <a class="page-link" href="{{links.nextPage}}" aria-label="Next">
            <span aria-hidden="true">
                <i class="fa fa-chevron-right" aria-hidden="true"></i></span> 
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>